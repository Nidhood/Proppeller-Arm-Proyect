<?xml version="1.0"?>
<package format="3">
    <name>prop_arm_gazebo_control</name>
    <version>0.0.1</version>
    <description>Control and hardware interface for the Prop Arm system using ros2_control</description>
    <maintainer email="ivan.oroz34@gmail.com">Nidhood</maintainer>
    <license>BSD-3-Clause</license>

    <buildtool_depend>ament_cmake</buildtool_depend>

    <!-- Runtime and build dependencies -->
    <depend>rclcpp</depend>
    <depend>hardware_interface</depend>
    <depend>pluginlib</depend>
    <depend>gz_ros2_control</depend>
    <depend>controller_interface</depend>

    <!-- Testing -->
    <test_depend>ament_lint_auto</test_depend>
    <test_depend>ament_lint_common</test_depend>
    <test_depend>ament_cmake_gtest</test_depend>

    <!-- Plugin export -->
    <export>
        <build_type>ament_cmake</build_type>
        <pluginlib plugin="${prefix}/prop_arm_hardware_interface_plugin.xml"/>
    </export>
</package>
